footer{
  background: linear-gradient(to top, #feba09, #ffeb00);
}
.footer{
  ul{
    display flex;
    flex-wrap: no-wrap;
    justify-content space-between;

    @media screen and (max-width: 768px){
      flex-wrap wrap
    }
    li{
      margin-right: 10px;
      border: none;
      background-color: inherit;

      a{
        padding: 5px 10px;
        &:hover {
          background: linear-gradient(to bottom, #fe8000, #ffeb00);
          border-radius: 20px;
        }

      }

    }
  }
}